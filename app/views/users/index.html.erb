<html>
<head>
	<title>Users</title>
</head>
<body>
	<h1>All Users</h1>
	<table class="users">
  	<% @users.each do |user| %>
  		<tr>
  			<td>
		      <%= link_to user.name, user %>
		    </td>
		    <td>
		    	  <% if current_user.admin? && !current_user?(user) %>
					    | <%= link_to "Remove User", user, method: :delete,
					                                  data: { confirm: "You sure?" } %>
					  <% end %>
		    </td>
  		</tr>
	  <% end %>
	</table>
</body>
</html>