<p id="notice"><%= notice %></p>

<h1>User Bets</h1>

<table>
  <thead>
    <tr>
      <th>Bet</th>
      <th>User selection</th>
      <th>User</th>
      <th>Amount bet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_bets.each do |user_bet| %>
      <tr>
        <td><%= user_bet.bet_id %></td>
        <td><%= user_bet.user_selection %></td>
        <td><%= user_bet.user_id %></td>
        <td><%= user_bet.amount_bet %></td>
        <td><%= link_to 'Show', user_bet %></td>
        <td><%= link_to 'Edit', edit_user_bet_path(user_bet) %></td>
        <td><%= link_to 'Destroy', user_bet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Bet', new_user_bet_path %>
